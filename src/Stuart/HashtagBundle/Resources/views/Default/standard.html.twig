{% extends "StuartHashtagBundle:Default:create.html.twig" %}

{% block main %}
<form role="form" method="post">
  
  {% if messages != 0 %}
    <div class="alert alert-danger alert-dismissable">{{ messages.error }}</div>
  {% endif %}
  
        <div class="form-group">
    <label for="hashtag">Hashtag</label>
    <input type="text" class="form-control" name="hashtag" id="hashtag" placeholder="Enter hashtag">
  </div>
  <div class="form-group">
    <label for="name">Hashtag Thing Name</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="Enter Name">
  </div>
  <div class="form-group">
    <label for="subdomain">Subdomain</label>
    <input type="text" class="form-control" name="subdomain" id="subdomain" placeholder="Enter Subdomain">
  </div>
    
   <div class="form-group">
    <label for="start">Start Date:</label>
    <input type="date" class="form-control" name="start" id="start">
  </div> 
 
  <div class="form-group">
    <label for="stop">Stop Date:</label>
    <input type="text" class="form-control" name="stop" readonly id="stop">
  </div>   
    
  <div class="form-group">
    <label for="theme">Theme</label>
    <select name="theme" class="form-control" id="theme">
        {% for theme in themes %}
        <option value="{{ theme.id }}">{{ theme.themeName }}</option>
        {% endfor %}
    </select>
    <a id="prev-link" target="_new" href="/preview/1">Preview Theme</a>
  </div>
  
  <div class="form-group">
    <label for="bg">Background Image</label>
    <input type="file" id="bg" name="bg" />
  </div>      
  
  <div class="checkbox">
    <label>
      <input type="checkbox"> <a href="#">{% block profanity %}{% endblock %}Profanity Filter</a>
    </label>
  </div>
  {% block plus %}{% endblock %}
  {% block pro %}{% endblock %} 
  <button type="submit" class="btn btn-default">Submit</button>
</form>          

{% endblock %}
{% block extrascript %}
<script>
    $('#theme').change(function(){
        $('#prev-link').attr('href', '/preview/'+$('#theme').val());
    });
</script>
<script src="/assets/js/form_help.js" />
{% endblock %}