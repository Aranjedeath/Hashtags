{% extends "StuartHashtagBundle:Default:create.html.twig" %}

{% block main %}

  {% if messages != 0 %}
    <div class="alert alert-danger alert-dismissable">{{ messages.error }}</div>
  {% endif %}

{{ form_start(form) }}
  
  <div class="form-group">
    {{form_label(form.hashtag)}}
    {{ form_widget(form.hashtag, {'attr': {'class': 'form-control', 'placeholder': 'Enter Hashtag'}}) }}
  </div>
  <div class="form-group">
    {{form_label(form.name)}}
    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter Name'}}) }}
  </div>
  <div class="form-group">
    {{form_label(form.subdomain)}}
    {{ form_widget(form.subdomain, {'attr': {'class': 'form-control', 'placeholder': 'Enter Subdomain'}}) }}
  </div>
  <div class="form-group">
    {{form_label(form.startDate)}}
    {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
  </div>
  <div class="form-group">
    {{form_label(form.file)}}
    {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
  </div>
   <div class="form-group">
    {{form_label(form.themeId)}}
    {{ form_widget(form.themeId) }}
       <p class="small"><a id="prev-link" target="_new" href="/preview/1">Preview Themes</a></p>
   </div>
  {{ form_widget(form.create, {'attr': {'class': 'btn btn-default'}}) }}
{{ form_end(form) }}
{% endblock %}
{% block extrascript %}

{% endblock %}